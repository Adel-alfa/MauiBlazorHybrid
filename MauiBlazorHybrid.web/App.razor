<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new []{typeof(MauiBlazorHybrid.SharedComponents.Auth.QuizAuthStateProvider).Assembly}">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
<Loader />
<ErrorMessage />
@inject QuizAuthStateProvider authStateProvider
@code {
    protected override async Task OnInitializedAsync()
    {
        await authStateProvider.InitializeAsync();
    }
}